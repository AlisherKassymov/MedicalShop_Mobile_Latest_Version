<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/pharmacy_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/pharmacyImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/pharmacyitem"/>

            <TextView
                android:id="@+id/pharmacyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/pharmacyImage"
                android:textStyle="bold"
                android:gravity="center"/>
           <TextView
                android:id="@+id/pharmacyTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/pharmacyImage"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_marginStart="5dp"
                android:id="@+id/pharmacyPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/pharmacyImage"
                android:layout_marginTop="40dp"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="310dp"
                android:src="@drawable/placeholder"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>